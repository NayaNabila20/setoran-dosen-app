<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header dengan tanggal dan status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvTanggalRiwayat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15 Januari 2024"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tvStatusRiwayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DITAMBAH"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="@drawable/bg_status_tambah"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- Nama surat -->
        <TextView
            android:id="@+id/tvNamaSuratRiwayat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Al-Fatihah"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="4dp" />

        <!-- Keterangan -->
        <TextView
            android:id="@+id/tvKeteranganRiwayat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keterangan: Hafalan lancar"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:visibility="gone" />

        <!-- Waktu -->
        <TextView
            android:id="@+id/tvWaktuRiwayat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="14:30 WIB"
            android:textSize="11sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>